name: Publish to PyPI

on:
  push:
    tags: ["v*.*.*"]
  workflow_dispatch:

jobs:
  build-and-publish:
    runs-on: ubuntu-latest
    permissions:
      id-token: write
      contents: read
      attestations: write

    steps:
      - uses: actions/checkout@v4

      - uses: actions/setup-python@v5
        with:
          python-version: "3.11"

      - name: Upgrade pip
        run: python -m pip install -U pip

      - name: Install build tools
        run: python -m pip install -U build twine

      - name: Build sdist and wheel
        run: python -m build

      - name: Twine check
        run: python -m twine check dist/*

      - name: Guard: only publish on stable semver tags
        run: |
          python - <<'PY'
          import os, re, sys
          tag=os.environ["GITHUB_REF_NAME"]
          if not re.fullmatch(r"v\d+\.\d+\.\d+", tag):
            print(f"Skip publish for non-stable tag: {tag}")
            sys.exit(0)
          print("Stable tag:", tag)
          PY

      - name: Publish to PyPI
        if: startsWith(github.ref, 'refs/tags/') && (github.ref_name =~ '^v[0-9]+\\.[0-9]+\\.[0-9]+$')
        uses: pypa/gh-action-pypi-publish@release/v1
